{
  "manifest_version": 3,
  "name": "Trufflehog",
  "version": "1.0",
  "description": "Sniffing out credentials",
  "action": { "default_popup": "popup.html", "default_title": "Trufflehog" },
  "background": { "service_worker": "background.js" },
  "permissions": ["tabs", "storage", "scripting", "notifications"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16":  "icon16.png",
    "48":  "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    { "matches": ["http://*/*", "https://*/*"], "js": ["inject.js"] }
  ]
}